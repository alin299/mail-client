/* components/category-grid/index.wxss */
.container {
  height: 320rpx;
  width: 100%;
  display: flex;
  flex-direction: row;  /*水平方向浮动*/
  align-items: center;/*交叉轴方向*/
  justify-content: center; /*主轴方向*/
  background-color: #ffffff;/*设置六宫格的背景色*/
}

.inner {
  width: 730rpx;
  height: 300rpx;
  border:1px dashed #DCEBE6;
}

.grid-item {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 60rpx;
  height: 60rpx;
}

.text {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #333333;
}